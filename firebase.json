{
  "projectId": "woozlabs",
  "functions": {
    "source": "functions"
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  },
  "hosting": {
    "public": "dist",
    "target": "api",
    "rewrites": [
      {
        "source": "/api/common/**",
        "function": "api-common"
      },
      {
        "source": "/v1/user/auth/**",
        "function": "user-auth"
      },
      {
        "source": "/v1/ai/chat/**",
        "function": "ai-chat"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  }
}
